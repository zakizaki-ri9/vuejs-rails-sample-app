<div class="container">
    <div class="row">
        <%= paginate @books %>
        <table class="table table-dark">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">title</th>
                </tr>
            </thead>
            <tbody>
                <% if @books.nil?  %>
                    data is nothing...
                <% else %>
                    <% count = 1 %>
                    <% @books.each do |book| %>
                        <tr>
                            <th scope="row"><%= count %></th>
                            <td><%= book.title %></td>
                        </tr>
                        <% count += 1 %>
                    <% end %>
                <% end %>
            </tbody>
        </table>
    </div>
</div>
